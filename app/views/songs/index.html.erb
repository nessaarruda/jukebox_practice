<h1>All Songs</h1>

<% @songs.each do |song| %>
  <section id="song-<%= song.id %>">
    <h3><%=  link_to song.title, song_path(song), class: 'here' %></h3>
    <p>Play count: <%= song.play_count %></p>
    <p>Length: <%= song.length %></p>
    <%= button_to "Add Song", carts_path(song_id: song.id) %>
  </section>
<% end %>
